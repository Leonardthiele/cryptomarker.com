{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "custom_stop_words": [
    "schema"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "output_dir": "cover/",
    "minimum_coverage": 65,
    "template_path": "test/support/coveralls_template/"
  },

  "skip_files": [
    "lib/mix",
    "lib/platform_web/endpoint.ex",
    "lib/platform_web.ex",
    "lib/platform.ex",
    "lib/platform/application.ex",
    "lib/platform/ability.ex",
    "lib/platform/core/currency_logo_uploader.ex",
    "lib/platform/core/exchange_logo_uploader.ex",
    "simple_form",
    "test/support"
  ]
}
